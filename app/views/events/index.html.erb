<h1 class="centered-text">Listing Events</h1>

<table class="centered-table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td>
          <%= link_to 'Show', event %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="centered-text">
  <%= link_to 'New Event', new_event_path %>
</div>
